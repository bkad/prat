@import "nib"

global-reset()
reset-html5()

light-grey = #FAFAFA
dark-grey = #C9C9C9
dark-hover-grey = #B3B3B3
dark-active-grey = #DDD
border-grey = 1px solid dark-grey

body
  font-family: arial, sans-serif
  width: 100%
  height: 100%
  overflow: hidden
  min-width: 800px

a
  text-decoration: none
  color: #D20000

button
  font-family: "Lucida Grande"
  font-size: 12px
  font-weight: bold
  color: #444
  background: whiteSmoke
  border: border-grey
  border-radius: 2px
  &:hover
    box-shadow: 0px 1px 1px rgba(0,0,0,.1)
    border: 1px solid dark-hover-grey
  &:active
    background: dark-active-grey

.left-sidebar
  absolute: top left
  height: 100%
  width: 200px
  border-right: border-grey
  .logo-title
    absolute: top 20px left 10px
    font-family: impact
    font-size: 30px
    font-weight: bold
  .channel-list-container
    absolute: top 100px left
    margin-left: -3px
    width: 150px
    button
      width: 150px
      height: 35px
      margin: 4px 0px
      padding: 0px 5px 0px 10px
      text-align: left
      font-size: 14px
      overflow: ellipsis
    .current
      background: #D25030
      color: white

.main-content
  background: white
  absolute: top left 200px
  right: 0px
  height: 100%
.right-sidebar
  absolute: top right
  height: 100%
  width: 200px
  .user-container
    position: absolute;
    top: 0;
    left: 0;
    right: 0px;
    height: 29px;
    background: light-grey
    border-right: border-grey
    border-bottom: border-grey
    border-left: border-grey
    border-radius: 2px
    .user-data
      absolute: top left
      margin: 5px
      .gravatar
        display: inline-block
      .user-name
        display: inline
        font-size: 12px
        font-weight: bold
        color: #333
      a.login
        absolute: top right
      a.logout
        absolute: top right
.chat-column
  absolute: top left
  right: 200px
  min-width: 400px
  height: 100%
.chat-controls
  absolute: top left
  right: 0px
  height: 29px
  background: light-grey
  border-right: border-grey
  border-bottom: border-grey
  border-left: border-grey
  border-radius: 2px
  button
    height: 20px
    width: 25px
  .toggle-left-sidebar
    absolute: top left
    margin: 5px
    font-size: 13px
  .toggle-right-sidebar
    absolute: top right
    margin: 5px
    font-size: 13px
.chat-messages-container
  absolute: top 30px left
  bottom: 81px
  width: 100%
  background: white
  overflow-y: auto
  overflow-x: hidden
  padding: 10px 0px 0px 0px
  .separator
    border-bottom: 1px solid #F1F1F1
  .message-container
    font-family: arial, sans-serif
    font-size: 14px
    color: #333
    margin: 0px 5px
    .author
      font-size: 12px
      font-weight: bold
    p, ol, div, ul
      margin-bottom: 8px
    code
      padding: 0px 2px
      font-size: 12px
      font-family: 'Bitstream Vera Sans Mono','Courier',monospace
      background: #F0EEEA
    .highlight
      white-space: pre
      padding: 5px
      font-size: 12px
      font-family: 'Bitstream Vera Sans Mono','Courier',monospace
      background: #F0EEEA
      border: 1px solid #D0CABD
      border-radius: 2px


  .gravatar
    display: inline-block
  .author
    display: inline
  .message
    display: inline

.message-separator
  margin-top: 8px
  margin-bottom: 7px
  border-bottom: border-grey
.input-container
  absolute: bottom left
  right: 0px
  height: 80px
  background: light-grey
  border-top: border-grey
  border-left: border-grey
  border-right: border-grey
  border-radius: 2px
.chat-text-wrapper
  absolute: top left
  right: 85px
  bottom: 0px
  padding: 10px
  textarea
    border-radius: 2px
    border: border-grey
    width: 100%
    height: 100%
    font-size: 14px
.input-controls
  absolute: top right
  bottom: 0px
  padding: 10px 0px
  width: 75px
  button
    height: 30px
    width: 65px
    &.chat-submit
      margin-bottom: 5px

